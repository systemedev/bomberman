@model Bomberman.Models.Games

@{
    ViewBag.Title = "Create";
}
<div id="main">
<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Games</legend>

        <div class="editor-label">
          Nom du jeu
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.title)
            @Html.ValidationMessageFor(model => model.title)
        </div>



        <div class="editor-label">
          Temps restant
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.remaining_time)
            @Html.ValidationMessageFor(model => model.remaining_time)
        </div>

        <div class="editor-label">
            Jeu publique ?
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.is_public)
            @Html.ValidationMessageFor(model => model.is_public)
        </div>

        <div class="editor-label">
         Carte
        </div>
        <div class="editor-field">
            @Html.DropDownList("id_map", String.Empty)
            @Html.ValidationMessageFor(model => model.id_map)
        </div>

      
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to my List of games", "Index","Game") | @Html.ActionLink("Back to public games", "Index","Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
</div>